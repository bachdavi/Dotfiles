# Backlight and audio buttons
bindcode 232 exec xbacklight -10
bindcode 233 exec xbacklight +10

bindsym XF86AudioRaiseVolume exec "amixer sset Master 5%+"
bindsym XF86AudioLowerVolume exec "amixer sset Master 5%-"

# External Monitor
bindsym $mod+x move workspace to output left
bindsym $mod+Shift+x move workspace to output primary
bindsym $mod+m focus output left
bindsym $mod+Shift+m focus workspace primary

# gaps settings
gaps inner 5
gaps outer 5

# screenshoot keybind
bindsym $mod+p exec xfce4-screenshooter


#exec_always --no-startup-id polybar example
bar {
      i3bar_command i3bar -t
      font pango:Source Sans Pro-10 10
      status_command $HOME/.i3/conky-i3bar
      position top
  colors {
    background $base00
    statusline $base07
    separator  $base02
    # name               border   background  font_color
    focused_workspace    $base0D  $base0D     $base07
    active_workspace     $base00  $base00     $base0D
    inactive_workspace   $base00  $base00     $base05
    urgent_workspace     $base08  $base08     $base07
    binding_mode         $base0E  $base0E     $base01

  }
}



